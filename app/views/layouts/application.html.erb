<!DOCTYPE html>
<html>
<head>
  <title>Tilannekuva</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header class="main-header"
    <nav class="navbar navbar-static-top navbar-expand-lg" role="navigation">
      <a href="/" class="navbar-brand">Tilannekuva</a>
      <div class="collapse navbar-collapse">
	<div class="navbar-nav">
	  <%= link_to 'Tilannekuva syötöllä', units_path, class: 'nav-link' %>
	  <%= link_to 'Tapahtumat', events_path, class: 'nav-link' %>
	  <%= link_to 'Uusi tapahtuma', new_event_path, class: 'nav-link' %>
	  <%= link_to 'Yksiköiden hallinta', units_available_path, class: 'nav-link' %>
	  <%= link_to 'Operaatiot', operations_path, class: 'nav-link' %>
	  <%= link_to 'Koodit', codes_path, class: 'nav-link' %>
	</ul>
<% if ! Rails.configuration.use_basic_auth %>
	<ul class="nav navbar-nav pull-right">
	  <% if user_signed_in? %>
	  <li class="dropdown">
	    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
	      <%= current_user.email %>
	      <span class="caret"></span>
	    </a>
	    <ul class="dropdown-menu" role="menu">
	      <li><%= link_to 'Kirjaudu ulos', destroy_user_session_path, method: :delete %></li>
	    </ul>
	  </li>
	  <% else %>
	  <li><%= link_to 'Kirjaudu sisään', new_user_session_path %></li>
	  <% end %>
	</ul>
	<% end %>
      </div>
    </nav>
  </header>
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
  
  <%= yield :top_content %>

  <h1><%= yield :header %></h1>
  <div class="box">
    <div class="box-body">
      <div class="container p-2">
        <%= yield %>
      </div>
    </div>
  </div>

</body>
</html>
