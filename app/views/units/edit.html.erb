<h1>Editing unit</h1>

<%= form_for(@unit) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :unit, 'Nimi' %>:
    <%= f.text_field :unit %>
  </p>
  <p>
    <%= f.label :phone, 'Puhelin' %>:
    <%= f.text_field :phone %>
  </p>
  <p>
    <%= f.label :imei, 'IMEI' %>:
    <%= f.text_field :imei %>
  </p>
  <p>
    <%= f.label :details, 'Lisatiedot' %>:
    <%= f.text_field :details %>
  </p>
